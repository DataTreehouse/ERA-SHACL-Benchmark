# SKOS Constraint component
era-sh:SKOSConstraintComponent a sh:ConstraintComponent ;
  sh:parameter [
		sh:path era-sh:conceptScheme;
		sh:nodeKind sh:IRI;
		] ;
	sh:propertyValidator era-sh:SKOSSelectValidator .

era-sh:SKOSSelectValidator a sh:SPARQLSelectValidator ;
	sh:select """
    PREFIX era: <http://data.europa.eu/949/>
    PREFIX skos: <http://www.w3.org/2004/02/skos/core#>
    PREFIX rdfs: <http://www.w3.org/2000/01/rdf-schema#>
    SELECT $this ?concept ?label
    WHERE {
 		OPTIONAL {$this rdfs:label ?label} .
        $this $PATH ?concept .

		FILTER NOT EXISTS{         
  			?concept skos:inScheme $conceptScheme .
		}
	}
""".

era-sh:trackShape
    a sh:NodeShape ;
    # sh:prefixes era-sh:EraPrefixesDeclaration ;
    sh:targetNode <http://data.europa.eu/949/functionalInfrastructure/tracks/36bf1461f295d432dd780fdc507133f908b7a1d4>; # Invalid Resource
  	sh:targetNode <http://data.europa.eu/949/functionalInfrastructure/tracks/07946c41d18b51d16a9fa7013dc13d30e3374c39>; # Valid Resource
    sh:property era-sh:protectionLegacySystemShape .
    
era-sh:protectionLegacySystemShape
    a sh:propertyShape ;
    sh:path era:protectionLegacySystem ;
    era-sh:conceptScheme <http://data.europa.eu/949/concepts/train-protection-legacy-systems/TrainProtectionLegacySystems> ;
    .


<>
  rdf:type mf:Manifest ;
  mf:entries (
      <propertyValidator-select-era-001>
    ) ;
.
<propertyValidator-select-era-001>
  rdf:type sht:Validate ;
  rdfs:label "Test of sh:propertyValidator 001" ;
  mf:action [
      sht:dataGraph <propertyValidator-select-era-001-data.ttl> ;
      sht:shapesGraph <> ;
    ] ;
  mf:result [
      rdf:type sh:ValidationReport ;
      sh:conforms "false"^^xsd:boolean ;
      sh:result [
          rdf:type sh:ValidationResult ;
          sh:focusNode <http://data.europa.eu/949/functionalInfrastructure/tracks/36bf1461f295d432dd780fdc507133f908b7a1d4> ;
          sh:resultSeverity sh:Violation ;
          sh:sourceConstraintComponent era-sh:SKOSConstraintComponent ;
          sh:sourceShape era-sh:protectionLegacySystemShape 
        ] ;
    ] ;
  mf:status sht:proposed ;
.

