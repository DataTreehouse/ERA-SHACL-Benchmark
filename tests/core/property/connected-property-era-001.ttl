  sh:class skos:Concept;
  sh:property era-sh:ProtectionLegacySystemSKOSinScheme;
  sh:severity sh:violation;
  sh:message "protectionLegacySystem: The instance of Track has a protectionLegacySystem value that is not a SKOS concept." .

era-sh:ProtectionLegacySystemSKOSinScheme a sh:PropertyShape;
